
<h2>Newsfeed</h2>


<% if signed_in? %>
  <form method= 'get' action="/users/<%= current_user.id%>/profile">
    <input type="submit" value="Profile"></input>
  </form>
<% end %>


<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.submit "Submit" %>
<% end %>

<% @posts_sorted.each do |post| %>
  <p><%= post.message %>, created at
  <%= "#{post.created_at.strftime("%H:%M:%S, %d %b %Y")}"%>
  </p>

<% end %>
