
<h2>Newsfeed</h2>

<!-- <button type="button" id="Profile">Profile</button> -->
<input type="submit" name="profile"></input>

<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.submit "Submit" %>
<% end %>

<% @posts_sorted.each do |post| %>
  <p><%= post.message %>, created at
  <%= "#{post.created_at.strftime("%H:%M:%S, %d %b %Y")}"%>
  </p>

<% end %>
